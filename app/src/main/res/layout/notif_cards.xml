<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotANDcold"
            card_view:layout_constraintStart_toStartOf="@id/relativeLayout"
            card_view:layout_constraintBottom_toBottomOf="@id/relativeLayout"
            card_view:layout_constraintTop_toTopOf="@id/relativeLayout"
            card_view:layout_constraintEnd_toStartOf="@+id/txtTitle"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 1"
            android:textColor="@color/intro_title_color"
            android:textSize="24dp"
            android:layout_marginStart="10dp"
            card_view:layout_constraintStart_toEndOf="@+id/hotANDcold"
            card_view:layout_constraintTop_toTopOf="@+id/relativeLayout"
            card_view:layout_constraintBottom_toTopOf="@+id/txtTime"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/intro_title_color"
            android:text="6 minutes ago | Swipe to Dismiss"
            card_view:layout_constraintStart_toEndOf="@+id/hotANDcold"
            card_view:layout_constraintTop_toBottomOf="@+id/txtTitle"
            card_view:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>