<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">
    <item android:right="1dp" android:top="3dp">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:bottom="3dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#0000D4" />
            <size android:width="48dp" android:height="48dp"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#0000D4"/>
        </shape>
    </item>
    <item android:drawable="@drawable/ic_action_on" android:bottom="3dp" android:left="1dp"/>
</layer-list>